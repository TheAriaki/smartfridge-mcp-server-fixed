{
  "name": "smartfridge-mcp-server",
  "version": "1.0.0",
  "description": "A robust SmartFridge MCP server with proper data persistence, HTTP bridge, and containerization support",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "smartfridge-mcp-server": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:http": "SERVER_MODE=http node build/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:http": "SERVER_MODE=http tsx watch src/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "clean": "rm -rf build",
    "prepare": "npm run build",
    "docker:build": "docker build -t smartfridge-mcp-server .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data smartfridge-mcp-server",
    "init-data": "node scripts/init-data.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "smartfridge",
    "food-management",
    "server"
  ],
  "author": "Ariaki Z",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "winston": "^3.17.0",
    "zod": "^3.23.8",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^10.0.0",
    "@types/jest": "^29.5.14",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheAriaki/smartfridge-mcp-server-fixed.git"
  },
  "bugs": {
    "url": "https://github.com/TheAriaki/smartfridge-mcp-server-fixed/issues"
  },
  "homepage": "https://github.com/TheAriaki/smartfridge-mcp-server-fixed#readme"
}