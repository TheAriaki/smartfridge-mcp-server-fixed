# SmartFridge MCP Server Configuration

# Server Mode
SERVER_MODE=mcp              # 'mcp' for MCP protocol, 'http' for REST API
PORT=3000                    # HTTP server port (when SERVER_MODE=http)
HOST=0.0.0.0                 # HTTP server host binding

# Data Configuration  
DATA_DIR=./data              # Directory for database files

# Environment
NODE_ENV=development         # development | production
LOG_LEVEL=info               # debug | info | warn | error

# CORS Settings (HTTP mode only)
CORS_ORIGIN=*                # Allowed origins (* for all, or specific domains)

# Optional: Database backup settings
BACKUP_INTERVAL=3600         # Backup interval in seconds (not implemented yet)
MAX_BACKUPS=5                # Maximum number of backup files to keep